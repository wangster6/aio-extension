{
  "manifest_version": 3,
  "name": "Text Overlay Button",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "storage",
    "https://api.openai.com/"
  ],
  "options_page": "options.html",
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": "icon.png"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content_script.js"]
    }
  ],
  "icons": {
    "48": "icon.png"
  }
}
